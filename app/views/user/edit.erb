<h2>Edit your awesome profile to a more awesome profile!</h2>
<%= @error_message if @error_message %>
<form method='post' action='/users/<%= current_user.id%>/edit'>
	<input type='text' style='width: 250px;' placeholder='Your lovely first name' value='<%= current_user.first_name%>' name='user[first_name]' ><br>
	<input type='text' style='width: 250px;' placeholder="Your cute last name" value='<%= current_user.last_name %>' name='user[last_name]' ><br>
	<input type='email' style='width: 250px;' placeholder='Your sweet email' value='<%= current_user.email %>' name='user[email]' ><br>
	<input type='password' style='width: 250px;' placeholder='And finally your secretive password' name='password' ><br>
	<input type='submit' value='EDIT NAO!'>
</form>
